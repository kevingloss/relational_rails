<header>
  <%= link_to "Pediatricians", "/pediatricians" %>
  <%= link_to "Patients", '/patients' %>
</header>
<h1>Pediatricians</h1>
<body>
<% @doctors.desc_order.each do |doctor| %>
<h3><%= doctor.name %> - Created at: <%=doctor.created_at%> <%= link_to "Edit Information", "/pediatricians/#{doctor.id}/edit"%></h3>
<p>Office: <%= doctor.office %></p>
<p>Years Practicing: <%= doctor.years_practicing %></p>
<p>Accepting New Patients: <%= doctor.accepting_patients %></p>
<%= button_to "Delete this Pediatrician", "/pediatricians/#{doctor.id}", method: :delete %>
<% end %>
</body>
<footer>
<%= link_to "Create New Pediatrician", '/pediatricians/new' %>
</footer>
